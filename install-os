#!/bin/sh

checksudo() {
	if [ "$(id -u)" != "0" ]; then
		echo "[ ERROR ] Script must be run as sudo!" && exit 1
	fi
}

checkdisks() {
	fdisk -l
	echo -e "\nChoose the disk: (/dev/sdX)"
	read -r DRIVE
	echo -e ""
	(
	echo o # Create new DOS disklabel
	echo n # New partition
	echo p # Make it primary
	echo 1 # Partition number 1
	echo   # First sector default
	echo +4G # Size: 4G
	echo w # write
	) | fdisk $DRIVE
	echo "Done"
}

# Installation steps
checksudo
checkdisks
